<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:padding="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:contentPadding="5dp"
    android:layout_margin="3dp"
    android:id="@+id/category_item_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:maxLines="1"
                android:textColor="@color/category_text"
                android:id="@+id/search_item_desc"
                android:text="我爱你我爱你我爱你我爱你"/>


            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_item_author"
                    android:textColor="@color/category_text2"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:text="en_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_item_time"
                    android:textColor="@color/category_text2"
                    android:textSize="13sp"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:text="rank"/>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>